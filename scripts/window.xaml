<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="toWEBPs Setup Wizard" Height="200" Width="400">
    <Grid>
        <Label Content="Welcome to the Setup Wizard" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="24"/>
        <Label Content="toWEBPs Setup" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,44,0,0" FontSize="20"/>
        <Button Content="Install" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="50,0,0,20" Name="InstallButton"/>
        <Button Content="Uninstall" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="0,0,50,20" Name="UninstallButton"/>
    </Grid>
</Window>
